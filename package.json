  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "dotenv": "^6.2.0",
    "es7-sleep": "^1.0.0",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
