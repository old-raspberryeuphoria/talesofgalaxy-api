    "nodemon": "^1.18.10",
    "prettier": "^1.16.4"
  },
  "eslintIgnore": [
    "build",
    "public",
    "node_modules"
  ],
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 70,
        "statements": 70
      }
    },
    "setupFilesAfterEnv": [
      "./test.config.js"
    ],
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "babel-jest"
    },
    "coverageDirectory": "../tests/api",
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "lib/**/*.js"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/!(node_modules)/**/__test?(s)__/**(spec|test).js"
    ]
  }
